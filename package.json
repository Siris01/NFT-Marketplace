{
	"name": "nft",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"copy-assets": "cp -R src/views dist && cp -R src/public dist/ && rm dist/public/scripts/*.ts",
		"tw": "npx tailwindcss -c tailwind.config.cjs -i ./src/public/css/styles.css -o ./dist/public/css/styles.css --mimify",
		"build": "rm -rf dist && mkdir dist && tsc && npm run copy-assets && npm run tw",
		"clean": "rm -rf dist && mkdir dist",
		"start": "npm run build && node -r dotenv/config dist/index.js",
		"dev": "nodemon -e ts,ejs,html,css --watch src --exec \"npm run start\"",
		"test": "npm run eslint && prettier --check ./src && tsc --noEmit",
		"eslint": "eslint",
		"pm2": "npm run build && pm2 start invi.yml",
		"format": "npx prettier --write ./src",
		"debug": "npm run build && node --expose-gc --inspect -r dotenv/config dist/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Siris01/NFT-Marketplace.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Siris01/NFT-Marketplace/issues"
	},
	"homepage": "https://github.com/Siris01/NFT-Marketplace#readme",
	"dependencies": {
		"dotenv": "^16.0.1",
		"ejs": "^3.1.8",
		"express": "^4.18.1",
		"node-fetch": "^3.2.4",
		"tailwindcss": "^3.0.24"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^17.0.35",
		"@types/node-fetch": "^2.6.1",
		"nodemon": "^2.0.16",
		"prettier": "^2.6.2",
		"typescript": "^4.6.4"
	}
}
